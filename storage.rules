rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    function isParentOf(userId) {
      return isSignedIn() &&
             firestore.get(/databases/(default)/documents/users/$(userId))
                      .data.parentId == request.auth.uid;
    }

    /*
     * PROFILE PICTURES
     * Path format:
     * /profile-pictures/{userId}/avatar.jpg
     */
    match /profile-pictures/{userId}/{fileName} {

      // Public read is acceptable for avatars
      allow read: if true;

      // Authenticated users may write to their own folder,
      // and parents can update their children's avatars.
      allow write: if isSignedIn() &&
                   (request.auth.uid == userId || isParentOf(userId));
    }

    /*
     * REPLY IMAGES
     * Path format:
     * /reply-images/{userId}/{challengeId}/{fileId}.jpg
     */
    match /reply-images/{userId}/{challengeId}/{fileName} {

      // Reads allowed only to authenticated users
      allow read: if request.auth != null;

      // Writes only allowed to owner
      allow write: if request.auth != null
                   && request.auth.uid == userId;
    }

    /*
     * DEFAULT DENY
     */
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
