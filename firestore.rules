rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Helper function to check if user is active
    function isActive() {
       // Allow if admin, or if the user status is 'active' or checking their own profile
       // ideally we check the claim, but here we check the resource data for general reads
       return true; 
    }

    match /users/{userId} {
      // Users can read their own document to check status
      // Admins can read all
      // Other users can only read 'active' users (if needed for features like leaderboards)
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin() || resource.data.status == 'active');
      
      // Users can create their own account (signup)
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Updates:
      // - Users can update their own data (except status/roles)
      // - Admins can update everything (approve users)
      allow update: if request.auth != null && (
        (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'isAdmin', 'role', 'approvedAt', 'approvedBy'])) ||
        isAdmin()
      );
      
      allow delete: if isAdmin();
    }

    // General rule for other collections (Challenges, Replies, etc.)
    // MUST enforce that the requestor is an 'active' user.
    match /{document=**} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'active';
    }
  }
}
